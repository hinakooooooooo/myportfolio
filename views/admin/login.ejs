<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin Login</title>
  <style>
    body{font-family:system-ui,-apple-system,sans-serif; display:grid; place-items:center; min-height:100vh; background:#f5f5f5; margin:0;}
    .card{background:#fff; padding:26px 24px; border-radius:14px; width:min(360px,92vw); box-shadow:0 12px 30px rgba(0,0,0,.08); border:1px solid #e5e5e5;}
    h1{margin:0 0 12px; font-size:1.2rem;}
    label{font-size:.95rem; display:block; margin-bottom:6px;}
    input{width:100%; padding:12px; font-size:1rem; border:1px solid #d0d0d0; border-radius:10px; box-sizing:border-box;}
    button{margin-top:14px; width:100%; padding:12px; border:none; border-radius:10px; background:#2d3748; color:#fff; font-weight:700; cursor:pointer;}
    .error{margin-top:12px; color:#d62828; font-size:.95rem;}
  </style>
</head>
<body>
  <div class="card">
    <h1>管理ログイン</h1>
    <form method="POST" action="/login">
      <label>管理パスワード</label>
      <input type="password" name="password" required>
      <button type="submit">ログイン</button>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error"><%= error %></div>
      <% } %>
    </form>
  </div>
</body>
</html>

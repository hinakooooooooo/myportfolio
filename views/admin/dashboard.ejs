<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>CMS | マツイヒナコ</title>
  <style>
    body{font-family:system-ui, -apple-system, sans-serif; padding:24px; background:#f7f7f7; color:#222;}
    h1{margin-top:0;}
    form{background:#fff; padding:16px; border-radius:12px; border:1px solid #ddd; margin-bottom:24px;}
    input, textarea{width:100%; padding:10px; margin:6px 0 12px; border:1px solid #ccc; border-radius:8px;}
    .grid{display:grid; grid-template-columns:1fr 1fr; gap:12px;}
    .list{background:#fff; border:1px solid #ddd; border-radius:12px; padding:12px;}
    .item{display:flex; justify-content:space-between; align-items:center; padding:8px 0; border-bottom:1px solid #eee;}
    .item:last-child{border-bottom:none;}
    button{padding:10px 16px; border:none; border-radius:10px; background:#222; color:#fff; cursor:pointer;}
    .danger{background:#d33;}
  </style>
</head>
<body>
  <h1>ブランド管理</h1>
  <form action="/admin/projects/add" method="POST">
    <div class="grid">
      <div>
        <label>タイトル</label>
        <input name="title" required>
      </div>
      <div>
        <label>タグ / カテゴリ</label>
        <input name="tag" placeholder="e.g. Product / Space / Experience">
      </div>
      <div>
        <label>年月</label>
        <input name="date" placeholder="2025-08">
      </div>
      <div>
        <label>画像URL</label>
        <input name="image_url" placeholder="https://...">
      </div>
    </div>
    <label>感情（背景・気づき）</label>
    <textarea name="description" rows="3" required></textarea>
    <label>過程（取り組み）</label>
    <textarea name="content" rows="3" required></textarea>
    <label>今（成果・展望）</label>
    <textarea name="learning" rows="3" required></textarea>
    <button type="submit">追加する</button>
  </form>

  <div class="list">
    <% projects.forEach(p => { %>
      <div class="item">
        <div>
          <strong><%= p.title %></strong> <small><%= p.tag %> / <%= p.date %></small>
        </div>
        <form action="/admin/projects/delete/<%= p.id %>" method="POST" onsubmit="return confirm('削除しますか？');">
          <button class="danger" type="submit">削除</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
